{
  "name": "praisepoint-ecommerce-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.dev.json src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "tsx src/migrate.ts",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.4.1",
    "@typescript-eslint/parser": "^8.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "glob": "^10.4.5"
  }
}
